  </PropertyGroup>

  <ItemGroup>
    <Compile Include="ChartExt.fs" />
    <Compile Include="Visualization.fs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Clm\Clm.fsproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Plotly.NET" Version="2.0.0-preview.8" />
